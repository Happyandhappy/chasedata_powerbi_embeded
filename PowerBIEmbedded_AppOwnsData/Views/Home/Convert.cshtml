<style>
    body{
        display:block!important;
    }
</style>

<div class="jumbotron text-center">
    <h1>Refresh Value convert Page</h1>    
</div>

<div class="container">
    <div class="form-group">
        <label>Refresh Value</label>
        <input class="form-control" type="text" name="refresh" id="refresh" />       
    </div>
    <div class="form-group">
        <button name="calculate" id="calculate" class="btn btn-primary">Calculate</button>
    </div>
    <div class="form-group">
        <label>Result</label>
        <input type="text" name="result" class="form-control" id="result"/>
    </div>
</div>

<script>    
    
    function cal(str) {
        var encrypted = CryptoJS.AES.encrypt(str, "Secret Passphrase").toString();
        return encrypted.replace("+", "*");
    }

    $('#calculate').click(function () {
        var refresh = $("#refresh").val();
        if (refresh != "")
            $('#result').val(cal(refresh));
    });
</script>